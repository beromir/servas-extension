{
    "manifest_version": 3,
    "name": "Servas",
    "version": "0.1.1",
    "description": "Extension for the bookmark manager Servas.",
    "action": {
        "default_popup": "dist/views/popup.html",
        "default_icon": {
            "16": "assets/logo/icon_16.png",
            "32": "assets/logo/icon_32.png"
        }
    },
    "options_ui": {
        "page": "dist/views/settings.html",
        "open_in_tab": true
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self';"
    },
    "icons": {
        "16": "assets/logo/icon_16.png",
        "32": "assets/logo/icon_32.png",
        "48": "assets/logo/icon_48.png",
        "128": "assets/logo/icon_128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{a9a4247e-af91-400f-8b53-ef4876b9a555}"
        }
    }
}
