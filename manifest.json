{
  "manifest_version": 3,
  "name": "My Svelte Extension",
  "version": "1.0.0",
  "description": "A browser extension built with Svelte and Tailwind",
  "action": {
    "default_popup": "dist/views/popup.html"
  },
  "options_ui": {
    "page": "dist/views/settings.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [],
}
